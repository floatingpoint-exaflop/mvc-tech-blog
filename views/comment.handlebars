<div class="row">
  <div class="col-auto">
    <h2>Add a new comment to {{title}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Please be civil!</h3>

    <form class="form new-comment-form">
      <input type="hidden" id="blog_id" value="{{blog_id}}"/>
      <div class="form-group">
        <label for="comment-text">Comment:</label>
        <input class="form-input" type="text" id="comment-text" name="comment_text" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/dashboard.js"></script>
