{{#if logged_in}}
<section id= "myBlogPosts">
    <h2 class="page-title">Your Blog Posts</h2>
        {{#each data as |blogpost|}}
        <article class="card card-rounded">
            <h2 class="card card-rounded card-header" id="blog-title">{{blogpost.title}}</h2>
            <hr>
            <p class ="card card-body" id="blog-text">{{blogpost.text}}</p>
            <h5 class="card card-body" id="blog-author">Written by{{blogpost.user.username}} on {{(format_date blogpost.date_created)}}</h5>
        </article>
        {{/each}}
</section>

<section id="blogForm">
    <h2 class="page-title">What's on your mind?</h2>
    <form class="form signup-form">
      <div class="form-group">
        <label for="newpost-title">Blog Post Title</label>
        <input class="form-input" type="text" placeholder="What is your blog post called?" id="newpost-title" />
      </div>
      <div class="form-group">
        <label for="newpost-text">Body Text</label>
        <input class="form-input" type="password" placeholder="What do you want to tell us about?" id="newpost-text" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit" id="newpost-submit">Submit Post</button>
      </div>
    </form>
</section>
{{else}}
<a href="/signin">You must sign in to your account before you can view this page.</a>
{{/if}}
